<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".SearchPeopleBoard">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumbarungothic"
            android:text="출발지 : "/>
        <TextView
            android:id="@+id/searchPeopleBoard_depart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/maplestorylight"
            android:text="서울"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumbarungothic"
            android:text=", 목적지 : "/>
        <TextView
            android:id="@+id/searchPeopleBoard_arrival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/maplestorylight"
            android:text="부산"/>

    </LinearLayout>
        <LinearLayout
            android:background="@android:color/darker_gray"
            android:layout_width="match_parent"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_height="0.3dp">

        </LinearLayout>

    <LinearLayout
        android:id="@+id/searchPeopleBoard_writerInfoLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="8dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/searchPeopleBoard_writerprofileImage"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="55dp"
            android:layout_height="55dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/searchPeopleBoard_title"
                android:layout_width="wrap_content"
                android:fontFamily="@font/nanumsquare_acb"
                android:text="제목입니다"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/searchPeopleBoard_writerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="작성자이름"
                    android:fontFamily="@font/nanumsquare_acb"
                    android:textSize="15dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
        </LinearLayout>


        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="bottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/searchPeopleBoard_deleteLayout"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/myPostDel"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="#0B7BD3"
                        android:fontFamily="@font/maplestoryotfbold"
                        android:text="삭제"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/searchPeopleBoard_reportLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <Button
                        android:id="@+id/Report"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="#0B7BD3"
                        android:layout_marginLeft="1dp"
                        android:fontFamily="@font/maplestoryotfbold"
                        android:textColor="@color/white"
                        android:text="신고"/>
                </LinearLayout>



            </LinearLayout>


            <TextView
                android:id="@+id/searchPeopleBoard_writeTime"
                android:text="2011.11.11 11:11"
                android:fontFamily="@font/maplestorylight"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:layout_marginRight="8dp"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:background="@android:color/darker_gray"
            android:layout_width="match_parent"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_height="0.3dp">

        </LinearLayout>

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/searchPeopleBoard_contents"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/nanumsquare_acb"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

        <LinearLayout
            android:background="@android:color/darker_gray"
            android:layout_width="match_parent"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_height="0.3dp">

        </LinearLayout>

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/searchPeopleBoard_recyclerview"
            android:layout_below="@+id/testLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/testLayout"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"

            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:layout_weight="5"
                android:id="@+id/searchPeopleBoard_commentEditText"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#FFFFFF"
                android:layout_marginRight="5dp"
                android:fontFamily="@font/nanumbarungothicbold"
                android:hint="댓글을 작성하세요"/>
            <Button
                android:layout_weight="1"
                android:id="@+id/searchPeopleBoard_commentButton"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:background="#0B7BD3"
                android:fontFamily="@font/maplestoryotfbold"
                android:textColor="@color/white"
                android:text="작성완료"/>
        </LinearLayout>


    </RelativeLayout>


    </LinearLayout>



</androidx.core.widget.NestedScrollView>