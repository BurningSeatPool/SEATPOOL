<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Fragment.My">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanumbarungothicbold"
        android:text="마이페이지"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_marginRight="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="1dp"
        android:layout_height="1dp">

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:background="#FBF8F8"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/myImage"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="20dp" />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="160dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/myName"
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/nanumbarungothicbold"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/myEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanumbarungothic"
                        android:layout_marginTop="2dp"
                        android:text="email"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="15dp" />
                </LinearLayout>

                    <TextView
                        android:id="@+id/myChatRoom"
                        android:layout_width="wrap_content"
                        android:padding="5dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="참여중인 그룹"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/buttoncolor"
                        android:fontFamily="@font/maplestorylight"
                        android:textColor="#ffffff"
                        android:textSize="12dp"
                        android:clickable="true"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="환급 가능 금액 : "
                    android:fontFamily="@font/nanumbarungothic"
                    android:layout_marginLeft="15dp"/>

                <TextView
                    android:id="@+id/myRefund"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:fontFamily="@font/maplestorylight"
                    android:textAlignment="textEnd"
                    android:textColor="#000000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 원"
                    android:fontFamily="@font/nanumbarungothic"
                    android:textColor="#000000" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/refundButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/refund_background"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/maplestorybold"
                    android:textColor="@color/white"
                    android:text="환급하기" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:background="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_height="1dp">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:fontFamily="@font/maplestorylight"
                    android:layout_marginTop="5dp"
                    android:text="커뮤니티"
                    android:textSize="20dp" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/writedocument"
                            android:layout_width="50dp"
                            android:layout_height="50dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:padding="8dp"
                            android:src="@drawable/commentwithnobackground"
                            android:layout_width="50dp"
                            android:layout_height="50dp"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/myPost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:fontFamily="@font/nanumbarungothic"
                        android:text="작성한 글 보기"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/myCommnet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:clickable="true"
                        android:fontFamily="@font/nanumbarungothic"
                        android:text="작성한 댓글 보기"
                        android:textColor="#000000" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:background="@android:color/darker_gray"
                    android:layout_width="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="1dp">

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:fontFamily="@font/maplestorylight"
                    android:layout_marginTop="5dp"
                    android:text="고객센터"
                    android:textSize="20dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/kakaotalk"
                            android:layout_width="50dp"
                            android:layout_height="50dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:padding="8dp"
                            android:src="@drawable/ic_request"
                            android:layout_width="50dp"
                            android:layout_height="50dp"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/myService"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:text="카카오톡 문의하기"
                        android:fontFamily="@font/nanumbarungothic"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textColor="#000000" />
                    <TextView
                        android:id="@+id/myService_1v1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="1:1 문의하기"
                        android:fontFamily="@font/nanumbarungothic"
                        android:textColor="#000000" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:background="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_height="1dp">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="계정"
                    android:fontFamily="@font/maplestorylight"
                    android:textSize="20dp" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:padding="4dp"
                        android:src="@drawable/trash_bin"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/logouticon"
                        android:padding="8dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/myDelete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:fontFamily="@font/nanumbarungothic"
                    android:text="회원탈퇴"
                    android:textColor="#000000" />
                <TextView
                    android:id="@+id/myLogOut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:fontFamily="@font/nanumbarungothic"
                    android:gravity="center"
                    android:text="로그아웃"
                    android:textColor="#000000" />
            </LinearLayout>



        </LinearLayout>

        <ImageView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

</LinearLayout>