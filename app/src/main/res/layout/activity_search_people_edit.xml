<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".SearchPeopleEdit">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="글 작성 페이지"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:fontFamily="@font/maplestoryotfbold"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"/>

    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/sp_et_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:background="@drawable/inputform"
            android:fontFamily="@font/nanumbarungothicbold"
            android:hint="제목을 입력하세요"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sp_et_depart"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/inputform"
                android:fontFamily="@font/nanumbarungothicbold"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="출발지 선택"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/sp_et_arrival"
                android:layout_width="wrap_content"
                android:layout_margin="3dp"
                android:layout_height="45dp"
                android:paddingLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/inputform"
                android:fontFamily="@font/nanumbarungothicbold"
                android:hint="목적지 선택"
                android:gravity="center"
                android:textAlignment="center"/>
        </LinearLayout>



    </LinearLayout>



    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/sp_et_content"
                android:layout_width="match_parent"
                android:gravity="top"
                android:paddingTop="20dp"
                android:layout_height="match_parent"
                android:layout_above="@+id/searchPeopleEditButtonLayout"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:background="@drawable/inputform"
                android:fontFamily="@font/nanumbarungothicbold"
                android:hint="내용을 입력하세요"
                android:lines="10"/>


            <LinearLayout
                android:id="@+id/searchPeopleEditButtonLayout"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/sp_btn_cancle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    android:background="#0B7BD3"
                    android:fontFamily="@font/maplestoryotfbold"
                    android:textColor="@color/white"
                    android:text="취소하기"/>
                <Button
                    android:id="@+id/sp_btn_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    android:background="#0B7BD3"
                    android:fontFamily="@font/maplestoryotfbold"
                    android:textColor="@color/white"
                    android:text="등록하기"/>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>